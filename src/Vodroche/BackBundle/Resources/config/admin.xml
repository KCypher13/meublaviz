
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

       <service id="vodroche.admin.video" class="Vodroche\BackBundle\Admin\VideoAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Content" label="Video"/>
          <argument />
          <argument>Vodroche\CoreBundle\Entity\Video</argument>
          <argument />
          <call method="setTranslationDomain">
              <argument>VodrocheBackBundle</argument>
          </call>
      </service>

       <service id="vodroche.admin.categorie" class="Vodroche\BackBundle\Admin\CategorieAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Content" label="categorie"/>
          <argument />
          <argument>Vodroche\CoreBundle\Entity\Categorie</argument>
          <argument />
          <call method="setTranslationDomain">
              <argument>VodrocheBackBundle</argument>
          </call>
      </service>

      <service id="vodroche.admin.region" class="Vodroche\BackBundle\Admin\RegionAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Content" label="region"/>
          <argument />
          <argument>Vodroche\CoreBundle\Entity\Region</argument>
          <argument />
          <call method="setTranslationDomain">
              <argument>VodrocheBackBundle</argument>
          </call>
      </service>

      <service id="vodroche.admin.comment" class="Vodroche\BackBundle\Admin\CommentAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Content" label="comment"/>
          <argument />
          <argument>Vodroche\CoreBundle\Entity\Comment</argument>
          <argument />
          <call method="setTranslationDomain">
              <argument>VodrocheBackBundle</argument>
          </call>
      </service>

   </services>
</container>